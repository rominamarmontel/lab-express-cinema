<section id="movies">
  <div class="title-container">
    <h1>{{title}}</h1>
    <p>Click on the movie to check the showtimes!</p>
  </div>
  <div class="movies-container">
    {{#each movies}}
    <div class="movie-card">
      <picture>
        <img src="{{image}}" alt="{{title}}">
      </picture>
      <p>{{title}}</p>
      <a href="/movie/{{_id}}">See more</a>
    </div>
    {{/each}}
  </div>
</section>